<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Add a Constraint Layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="match_parent">


        <!-- Add a Text View to display the character names -->
        <TextView
            android:id="@+id/episodeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Episode Name"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/episodeNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Episode Number"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/episodeName"
            app:layout_constraintStart_toStartOf="@id/episodeName" />

        <TextView
            android:id="@+id/airDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Air Date"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/episodeNumber"
            app:layout_constraintStart_toStartOf="@id/episodeName"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>